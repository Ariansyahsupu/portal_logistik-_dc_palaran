        // --- Render Main Controller ---
        function render() {
            const root = document.getElementById('app-root');
            root.innerHTML = '';
            root.insertAdjacentHTML('beforeend', renderNavbar());

            let content = '';
            if (AppState.currentView === 'home') {
                content += renderHero();
                content += renderObjective();
                content += renderKeyFunctions(); // functions
                content += renderCategories();
                content += renderProcess();
                content += renderTrackingSection(); // tracking
                content += renderContact();
                content += renderFooter();
            } else if (AppState.currentView === 'dashboard') {
                content += renderDashboard();
            } else if (AppState.currentView === 'catalog') {
                content += renderCatalog();
            } else if (AppState.currentView === 'analysis') {
                 // Analysis Landing
                 content += `
                 <div class="min-h-screen pt-24 pb-12 bg-slate-900 text-white animate-in">
                    <div class="max-w-7xl mx-auto px-4 text-center mb-12"><h2 class="text-4xl font-extrabold mb-4">Analysis Tools</h2><p class="text-slate-400">Advanced data processing modules.</p></div>
                    <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
                        <div onclick="window.handleNavClick('fff')" class="bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-orange-500 cursor-pointer group relative overflow-hidden"><div class="absolute top-0 right-0 w-32 h-32 bg-orange-500 opacity-10 rounded-bl-full -mr-8 -mt-8"></div><div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mb-6"><i data-lucide="git-merge" class="text-white w-8 h-8"></i></div><h3 class="text-xl font-bold mb-3">FFF Class Analysis</h3><p class="text-slate-400 text-sm mb-6">Detect Form-Fit-Function interchangeability.</p><span class="text-xs font-bold uppercase text-slate-500 group-hover:text-white flex items-center">Launch Tool <i data-lucide="arrow-right" class="ml-2 w-4 h-4"></i></span></div>
                        <div onclick="window.handleNavClick('pros')" class="bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-blue-500 cursor-pointer group relative overflow-hidden"><div class="absolute top-0 right-0 w-32 h-32 bg-blue-600 opacity-10 rounded-bl-full -mr-8 -mt-8"></div><div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center mb-6"><i data-lucide="bar-chart-3" class="text-white w-8 h-8"></i></div><h3 class="text-xl font-bold mb-3">PR OS Analysis</h3><p class="text-slate-400 text-sm mb-6">Prioritize stock allocation over purchasing.</p><span class="text-xs font-bold uppercase text-slate-500 group-hover:text-white flex items-center">Launch Tool <i data-lucide="arrow-right" class="ml-2 w-4 h-4"></i></span></div>
                        <div onclick="window.handleNavClick('block')" class="bg-slate-800 rounded-2xl p-8 border border-slate-700 hover:border-slate-500 cursor-pointer group relative overflow-hidden"><div class="absolute top-0 right-0 w-32 h-32 bg-slate-600 opacity-10 rounded-bl-full -mr-8 -mt-8"></div><div class="w-16 h-16 bg-slate-600 rounded-2xl flex items-center justify-center mb-6"><i data-lucide="alert-triangle" class="text-white w-8 h-8"></i></div><h3 class="text-xl font-bold mb-3">Block Master</h3><p class="text-slate-400 text-sm mb-6">Analyze deadstock and blockage status.</p><span class="text-xs font-bold uppercase text-slate-500 group-hover:text-white flex items-center">Launch Tool <i data-lucide="arrow-right" class="ml-2 w-4 h-4"></i></span></div>
                    </div>
                 </div>`;
            } else if (AppState.currentView === 'fff') {
                content += renderModule('FFF Analysis', 'git-merge', 'orange', `<div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">1. Brand Data</h3><input type="file" id="fff-brand" accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100"></div><div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">2. MB51 History</h3><input type="file" id="fff-mb51" multiple accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100"></div>`, "window.runFFF()");
            } else if (AppState.currentView === 'pros') {
                content += renderModule('PROS Analysis', 'bar-chart-3', 'blue', `<div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">1. MB52 Stock</h3><input type="file" id="pros-mb52" accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"></div><div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">2. PR Outstanding</h3><input type="file" id="pros-pr" accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"></div>`, "window.runPROS()");
            } else if (AppState.currentView === 'block') {
                 content += renderModule('Block Master', 'alert-triangle', 'slate', `<div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">1. MB51 History</h3><input type="file" id="bm-mb51" accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-slate-100 file:text-slate-700 hover:file:bg-slate-200"></div><div class="border-2 border-dashed border-slate-300 p-8 rounded-xl text-center hover:bg-slate-50"><h3 class="font-bold mb-2">2. SOH Stock</h3><input type="file" id="bm-soh" accept=".xlsx" class="block mx-auto text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-slate-100 file:text-slate-700 hover:file:bg-slate-200"></div>`, "window.runBlock()");
            }
            root.insertAdjacentHTML('beforeend', content);
            lucide.createIcons();
        }

        // --- Event Handlers & API Calls ---

        window.fetchDashboardData = async () => {
             try {
                const response = await fetch('https://docs.google.com/spreadsheets/d/e/2PACX-1vTPtHu0LJ4f9BZ_7zx4PFIgKShRcuFbl449_tVUbh6c0VKdTZvIM9KrfT7rp_ByEQXEr65OA4hN18Wk/pub?gid=0&single=true&output=csv');
                const text = await response.text();
                const rows = parseCSV(text).slice(1);
                let totalVol = 0; const projectCounts = {}; const feed = [];
                rows.forEach(row => {
                    if(!row[6]) return; 
                    const proj = row[35] || 'Unknown'; const sto = row[6]; const status = row[33] || 'Processing';
                    totalVol++; projectCounts[proj] = (projectCounts[proj] || 0) + 1;
                    if(feed.length < 5) feed.push({ sto, proj, status });
                });
                if(document.getElementById('dash-val')) document.getElementById('dash-val').textContent = formatIDR(totalVol * 25000000);
                if(document.getElementById('dash-vol')) document.getElementById('dash-vol').textContent = totalVol.toLocaleString();
                const chartEl = document.getElementById('dash-charts');
                if(chartEl) {
                    const sortedProjs = Object.entries(projectCounts).sort((a,b) => b[1] - a[1]).slice(0, 5);
                    const max = sortedProjs[0][1];
                    chartEl.innerHTML = sortedProjs.map(([p, v]) => `<div><div class="flex justify-between text-sm text-slate-300 mb-1"><span>${p}</span><span>${v}</span></div><div class="w-full bg-slate-800 rounded-full h-2"><div class="bg-orange-500 h-2 rounded-full" style="width:${(v/max)*100}%"></div></div></div>`).join('');
                }
                const feedEl = document.getElementById('dash-feed');
                if(feedEl) {
                    feedEl.innerHTML = feed.map(f => `<div class="flex justify-between items-center border-b border-slate-800 pb-2"><div><div class="text-sm font-bold text-white">STO #${f.sto}</div><div class="text-xs text-slate-500">${f.proj}</div></div><div class="text-xs text-orange-400">${f.status}</div></div>`).join('');
                }
            } catch(e) { console.error(e); }
        };

        window.handleTrack = async (e) => {
            e.preventDefault(); const input = document.getElementById('stoInput').value.trim(); const container = document.getElementById('trackingResult');
            if(!input) return;
            container.innerHTML = '<div class="text-center p-4 text-slate-500 flex justify-center"><i data-lucide="loader-2" class="animate-spin mr-2"></i> Searching...</div>'; 
            container.classList.remove('hidden');
            lucide.createIcons();
            try {
                const res = await fetch('https://docs.google.com/spreadsheets/d/e/2PACX-1vTPtHu0LJ4f9BZ_7zx4PFIgKShRcuFbl449_tVUbh6c0VKdTZvIM9KrfT7rp_ByEQXEr65OA4hN18Wk/pub?gid=0&single=true&output=csv');
                const rows = parseCSV(await res.text()); const found = rows.find(r => r[6] === input);
                if(found) {
                    const rawStatus = (found[33] || '').toUpperCase(); const project = found[35] || 'Unknown';
                    let activeIndex = 0;
                    if (rawStatus.includes('WAITING') || rawStatus.includes('PACKING')) activeIndex = 1;
                    else if (rawStatus.includes('TERKIRIM') || rawStatus.includes('DISPATCH')) activeIndex = 2;
                    else if (rawStatus.includes('DELIVERED') || rawStatus.includes('SAMPAI')) activeIndex = 3;

                    const steps = [
                        { title: 'Order Confirmed', sub: 'STO Verified', icon: 'check-circle' },
                        { title: 'Picking & Packing', sub: 'Warehouse Processing', icon: 'package' },
                        { title: 'Dispatched', sub: 'Handed to Transporter', icon: 'truck' },
                        { title: 'Delivered', sub: 'Received at Site', icon: 'map-pin' }
                    ];

                    let html = `<div class="bg-slate-50 border border-slate-200 rounded-lg p-4 mb-6 flex justify-between items-center"><div><div class="text-xs text-slate-500 uppercase font-bold">Project</div><div class="text-lg font-bold text-slate-900">${project}</div></div><div class="text-right"><div class="text-xs text-slate-500 uppercase font-bold">Status</div><div class="text-sm font-bold text-orange-600">${rawStatus || 'CONFIRMED'}</div></div></div>`;
                    html += `<div class="space-y-8 relative pl-2 mt-8"><div class="absolute left-6 top-2 bottom-4 w-0.5 bg-slate-200 -z-10"></div>`;
                    steps.forEach((step, idx) => {
                        const isActive = idx <= activeIndex; const isCurrent = idx === activeIndex;
                        let color = 'bg-slate-200 text-slate-400';
                        if (isActive) {
                            if (idx === 0) color = 'bg-red-600 text-white shadow-lg shadow-red-200';      
                            else if (idx === 1) color = 'bg-yellow-500 text-white shadow-lg shadow-yellow-200'; 
                            else if (idx === 2) color = 'bg-lime-500 text-white shadow-lg shadow-lime-200';     
                            else if (idx === 3) color = 'bg-green-700 text-white shadow-lg shadow-green-200';   
                        }
                        
                        html += `<div class="relative flex items-start group ${isActive ? '' : 'opacity-50'}"><div class="w-8 h-8 rounded-full flex items-center justify-center relative z-10 transition-all ${color} ${isCurrent ? 'scale-110 ring-4 ring-white shadow-lg' : ''}"><i data-lucide="${step.icon}" class="w-4 h-4"></i></div><div class="ml-6 pt-1"><h4 class="font-bold text-slate-900">${step.title}</h4><p class="text-xs text-slate-500">${step.sub}</p></div></div>`;
                    });
                    html += `</div>`; container.innerHTML = html; lucide.createIcons();
                } else { container.innerHTML = `<div class="text-red-500 p-4 font-bold text-center">STO Not Found</div>`; }
            } catch(err) { container.innerHTML = `<div class="text-red-500 p-4">Connection Error</div>`; }
        };

        window.handleStockCheck = (e) => {
            e.preventDefault();
            const form = e.target;
            const site = form.site.value;
            const type = form.type.value;
            const item = form.item.value;
            
            if(!site) return alert("Silakan pilih Project Site (PL) terlebih dahulu.");
            
            const message = `Halo Admin DC Palaran, saya ingin cek stock:\n\nSite: ${site}\nItem (${type}): ${item}\n\nMohon informasinya. Terima kasih.`;
            const url = `https://wa.me/628115550123?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        };

        window.handleCatalogSubmit = async (e) => {
            e.preventDefault(); const form = e.target;
            if(!auth.currentUser) return alert("Please wait for system authentication.");
            try {
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'requests'), {
                    name: form.name.value, department: form.department.value, description: form.description.value,
                    partNumber: form.partNumber.value, quantity: form.quantity.value, urgency: form.urgency.value,
                    userId: auth.currentUser.uid, status: 'Pending', timestamp: serverTimestamp()
                });
                alert("Request submitted successfully!"); form.reset();
            } catch(err) { console.error(err); alert("Failed to submit."); }
        };

        window.runFFF = async () => {
             const brandFile = document.getElementById('fff-brand').files[0]; const mb51Files = document.getElementById('fff-mb51').files;
             if(!brandFile || !mb51Files.length) return alert("Please upload files");
             toggleLoading('module', true, "Analyzing...");
             const worker = createWorker();
             worker.onmessage = (e) => {
                 const {type, message, data} = e.data;
                 if(type === 'progress') document.getElementById('module-msg').textContent = message;
                 if(type === 'result') { toggleLoading('module', false); displayResults(data); }
             };
             const brandBuffer = await brandFile.arrayBuffer(); const mb51Buffers = await Promise.all(Array.from(mb51Files).map(f => f.arrayBuffer()));
             worker.postMessage({ type: 'fff_analysis', payload: { brandBuffer, mb51Buffers } });
        };

        window.runPROS = async () => {
             const mb52 = document.getElementById('pros-mb52').files[0]; const pr = document.getElementById('pros-pr').files[0];
             if(!mb52 || !pr) return alert("Upload files");
             toggleLoading('module', true); const worker = createWorker();
             const [b1, b2] = await Promise.all([mb52.arrayBuffer(), pr.arrayBuffer()]);
             worker.onmessage = (e) => {
                 if(e.data.type === 'result') { toggleLoading('module', false); displayResults(e.data.data.details); }
                 else if (e.data.type === 'progress') document.getElementById('module-msg').textContent = e.data.message;
             };
             worker.postMessage({ type: 'pros_analysis', payload: { mb52Buffer: b1, prBuffer: b2 } });
        };

         window.runBlock = async () => {
             const mb51 = document.getElementById('bm-mb51').files[0]; const soh = document.getElementById('bm-soh').files[0];
             if(!mb51 || !soh) return alert("Upload files");
             toggleLoading('module', true); const worker = createWorker();
             const [b1, b2] = await Promise.all([mb51.arrayBuffer(), soh.arrayBuffer()]);
             worker.onmessage = (e) => {
                 if(e.data.type === 'result') { toggleLoading('module', false); displayResults(e.data.data); }
                 else if (e.data.type === 'progress') document.getElementById('module-msg').textContent = e.data.message;
             };
             worker.postMessage({ type: 'block_master_analysis', payload: { mb51Buffer: b1, sohBuffer: b2 } });
        };

        function toggleLoading(id, show, msg="Processing...") {
            const el = document.getElementById(id+'-status'); const err = document.getElementById(id+'-error');
            if(show) { el.classList.remove('hidden'); err.classList.add('hidden'); document.getElementById(id+'-msg').textContent = msg; }
            else el.classList.add('hidden');
        }

        function displayResults(data) {
            const container = document.getElementById('module-results');
            if(!data.length) { container.innerHTML = `<div class="text-center p-8">No results found</div>`; return; }
            const keys = Object.keys(data[0]).filter(k => !k.startsWith('_') && k !== 'rowSpan');
            let html = `<div class="bg-white rounded-xl shadow p-6 overflow-x-auto max-h-[500px]"><table class="w-full text-sm text-left"><thead class="bg-slate-100 font-bold uppercase text-xs"><tr>${keys.map(k => `<th class="p-3">${k}</th>`).join('')}</tr></thead><tbody>`;
            html += data.slice(0, 100).map(row => `<tr class="hover:bg-slate-50 border-b border-slate-100">${keys.map(k => { let val = row[k]; if(typeof val === 'number' && val > 1000) val = val.toLocaleString(); return `<td class="p-3">${val}</td>`; }).join('')}</tr>`).join('');
            html += `</tbody></table></div>`; container.innerHTML = html;
        }

        // --- Improved Navigation Handler ---
        window.handleNavClick = (view, selector = null) => {
            // Jika view berubah
            if (AppState.currentView !== view) {
                AppState.currentView = view;
                render();
                
                // Jika ada selector, tunggu render selesai baru scroll
                if (selector) {
                    setTimeout(() => {
                        const el = document.querySelector(selector);
                        if(el) el.scrollIntoView({ behavior: 'smooth' });
                        else window.scrollTo(0, 0); // Fallback
                    }, 50);
                } else {
                    window.scrollTo(0, 0);
                }
            } else {
                // View sama, hanya scroll
                if (selector) {
                    const el = document.querySelector(selector);
                    if(el) el.scrollIntoView({ behavior: 'smooth' });
                } else {
                    window.scrollTo(0, 0);
                }
            }
            // Tutup menu mobile
            AppState.mobileMenuOpen = false;
            // Update UI menu mobile jika perlu (re-render navbar)
            const navContainer = document.querySelector('nav').parentElement;
            if(navContainer) {
               // Optional: Re-render navbar to update active states immediately if needed, 
               // tapi render() utama di atas sudah menghandle ini.
            }
        };

        window.toggleMobileMenu = () => { AppState.mobileMenuOpen = !AppState.mobileMenuOpen; render(); };
        window.addEventListener('scroll', () => { const scrolled = window.scrollY > 50; if(AppState.navbarScrolled !== scrolled) { AppState.navbarScrolled = scrolled; render(); } });

        // Init
        if(auth) { onAuthStateChanged(auth, (user) => { currentUser = user; console.log("Auth:", user ? "OK" : "Anon"); }); signInAnonymously(auth).catch(e => console.error(e)); }
        render();

    </script>
</body>
</html>
