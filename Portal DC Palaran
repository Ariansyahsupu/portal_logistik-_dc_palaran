    <!-- Script Utama (Logic Aplikasi) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInWithCustomToken, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, serverTimestamp, query, orderBy, limit } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // --- Konfigurasi Firebase ---
        let firebaseConfig;
        if (typeof __firebase_config !== 'undefined' && __firebase_config) {
            try { firebaseConfig = JSON.parse(__firebase_config); } catch (e) { console.error(e); }
        }
        if (!firebaseConfig) {
             firebaseConfig = { apiKey: "API_KEY_ANDA", authDomain: "PROJECT.firebaseapp.com", projectId: "PROJECT_ID" }; // Placeholder
        }

        let app, auth, db;
        try {
            app = initializeApp(firebaseConfig);
            auth = getAuth(app);
            db = getFirestore(app);
        } catch (error) { console.error("Firebase Init Error:", error); }

        const appId = typeof __app_id !== 'undefined' ? __app_id : 'dc-palaran-app';
        let currentUser = null;

        // --- Utils & Helpers ---
        const formatIDR = (val) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', maximumFractionDigits: 0 }).format(val);
        const parseCSV = (text) => {
             const rows = []; let currentRow = [], currentCell = '', inQuotes = false;
             for (let i = 0; i < text.length; i++) {
                const char = text[i];
                if (char === '"' && text[i+1] === '"') { currentCell += '"'; i++; }
                else if (char === '"') inQuotes = !inQuotes;
                else if (char === ',' && !inQuotes) { currentRow.push(currentCell.trim()); currentCell = ''; }
                else if ((char === '\n' || char === '\r') && !inQuotes) {
                    if (currentCell || currentRow.length) rows.push(currentRow);
                    currentRow = []; currentCell = '';
                } else currentCell += char;
             }
             if (currentCell || currentRow.length) { currentRow.push(currentCell.trim()); rows.push(currentRow); }
             return rows;
        }

        // --- Web Worker Script ---
        const workerScript = `
          importScripts("https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js");
          const WHITELIST_BRANDS = ['KOMATSU', 'SCANIA', 'VOLVO', 'MERCEDES BENZ'];
          const PLANT_MAP = { "PL01": "MSJ", "PL03": "BE", "PL14": "TJP", "PL22": "MRW", "PL06": "KALSEL", "PL09": "MME", "PL15": "GAM", "PL18": "ABP", "PL19": "GSP" };
          const normalizeHeader = (header) => String(header).toLowerCase().replace(/[^a-z0-9]/g, '');
          const mapHeaders = (headersRow) => { const map = {}; headersRow.forEach((h, i) => { map[normalizeHeader(h)] = i; }); return map; };
          const readExcelFromBuffer = (buffer) => { const data = new Uint8Array(buffer); const workbook = XLSX.read(data, { type: 'array', cellDates: true }); return XLSX.utils.sheet_to_json(workbook.Sheets[workbook.SheetNames[0]], { header: 1 }); };

          self.onmessage = async (e) => {
            const { type, payload } = e.data;
            try {
              if (type === 'fff_analysis') await processFFF(payload);
              else if (type === 'pros_analysis') await processPROS(payload);
              else if (type === 'block_master_analysis') await processBlockMaster(payload);
            } catch (err) { self.postMessage({ type: 'error', message: err.message }); }
          };

          async function processBlockMaster({ mb51Buffer, sohBuffer }) {
              self.postMessage({ type: 'progress', message: 'Processing MB51...' });
              const rawMB51 = readExcelFromBuffer(mb51Buffer);
              const hMB51 = mapHeaders(rawMB51[0]);
              const idxMat = hMB51['material']??hMB51['materialnumber'];
              const idxQty = hMB51['qtyinunitofentry']??hMB51['quantity'];
              const mb51Map = {};
              for (let i = 1; i < rawMB51.length; i++) {
                const row = rawMB51[i]; const mat = String(row[idxMat]||'').trim();
                if (!mat) continue;
                if (!mb51Map[mat]) mb51Map[mat] = { freq: 0, totalQty: 0 };
                mb51Map[mat].freq++; mb51Map[mat].totalQty += (parseFloat(row[idxQty])||0);
              }
              self.postMessage({ type: 'progress', message: 'Aggregating SOH...' });
              const rawSOH = readExcelFromBuffer(sohBuffer);
              const hSOH = mapHeaders(rawSOH[0]);
              const idxSMat = hSOH['material']??hSOH['materialnumber'];
              const idxSQty = hSOH['unrestricted']??hSOH['unrestrictedstock'];
              const idxSVal = hSOH['valueunrestricted']??hSOH['valueunrestrictedstock'];
              const idxDesc = hSOH['materialdescription']??hSOH['description'];
              const results = []; const processedMats = new Set();
              for (let i = 1; i < rawSOH.length; i++) {
                const row = rawSOH[i]; const mat = String(row[idxSMat]||'').trim();
                if (!mat || processedMats.has(mat)) continue;
                const activity = mb51Map[mat] || { freq: 0, totalQty: 0 };
                results.push({ matCode: mat, description: row[idxDesc]||'', totalUnrestricted: parseFloat(row[idxSQty])||0, totalValue: parseFloat(row[idxSVal])||0, movementFreq: activity.freq, totalMovementQty: activity.totalQty, status: activity.freq === 0 ? "No Movement" : "Active" });
                processedMats.add(mat);
              }
              results.sort((a, b) => b.totalValue - a.totalValue);
              self.postMessage({ type: 'result', data: results });
          }

          async function processFFF({ brandBuffer, mb51Buffers }) {
            self.postMessage({ type: 'progress', message: 'Parsing Asset Data...' });
            const brandData = readExcelFromBuffer(brandBuffer);
            const hBrand = mapHeaders(brandData[0]);
            const idxEq = hBrand['equipmentid']??hBrand['equipment'];
            const idxBr = hBrand['brand']??hBrand['manufacturer'];
            const assetMap = {};
            for(let i=1; i<brandData.length; i++) {
                const row = brandData[i]; const eq = String(row[idxEq]||'').trim().replace(/\\s+/g, '');
                if(eq) assetMap[eq] = { brand: String(row[idxBr]||'UNKNOWN').trim().toUpperCase() };
            }
            let transactions = [];
            for (let f=0; f<mb51Buffers.length; f++) {
                const raw = readExcelFromBuffer(mb51Buffers[f]);
                const h = mapHeaders(raw[0]);
                const idxMat = h['material']??h['materialno']; const idxDesc = h['materialdescription']??h['description']; const idxMpn = h['mpn']??h['manufacturerpartnumber']; const idxEqMb = h['equipment']??h['equipmentid'];
                for(let j=1; j<raw.length; j++) {
                    const row = raw[j]; const mat = String(row[idxMat]||'').trim(); const desc = String(row[idxDesc]||'').trim().toUpperCase(); const mpn = String(row[idxMpn]||'').trim(); const eq = String(row[idxEqMb]||'').trim().replace(/\\s+/g, '');
                    if(!mat || mat.startsWith('5') || /^\\d/.test(eq)) continue;
                    const asset = assetMap[eq]; let brand = asset?.brand || 'UNKNOWN';
                    if(brand === 'RIIPING DOZING') brand = 'KOMATSU';
                    if(!WHITELIST_BRANDS.includes(brand)) continue;
                    transactions.push({ matCode: mat, desc, mpn, brand, isGenuine: desc.includes(brand) });
                }
            }
            const mpnGroups = {};
            transactions.forEach(tx => {
                if(!tx.mpn || tx.mpn.length < 2) return;
                if(!mpnGroups[tx.mpn]) mpnGroups[tx.mpn] = {};
                if(!mpnGroups[tx.mpn][tx.matCode]) mpnGroups[tx.mpn][tx.matCode] = { ...tx, count: 0 };
                mpnGroups[tx.mpn][tx.matCode].count++;
            });
            const final = [];
            Object.keys(mpnGroups).forEach(mpn => {
                const list = Object.values(mpnGroups[mpn]);
                if(list.length > 1) {
                    const genuineCount = list.filter(m => m.isGenuine).length;
                    let category = genuineCount >= 2 ? "Two Way" : (genuineCount === 1 ? "One Way" : "Not");
                    list.sort((a,b) => a.matCode.localeCompare(b.matCode));
                    list.forEach((mat, idx) => {
                        let rec = mat.isGenuine ? "OK" : "NOK";
                        let note = mat.isGenuine ? "Genuine" : "Low Freq";
                        final.push({ ...mat, category, recommendation: rec, logicNote: note, rowSpan: idx === 0 ? list.length : 0 });
                    });
                }
            });
            self.postMessage({ type: 'result', data: final });
          }

          async function processPROS({ mb52Buffer, prBuffer }) {
              const rawStock = readExcelFromBuffer(mb52Buffer); const hStock = mapHeaders(rawStock[0]);
              const idxSMat = hStock['material']??hStock['materialnumber']; const idxSQty = hStock['unrestricted']??hStock['unrestrictedstock']; const idxSVal = hStock['valueunrestricted']??hStock['valueunrestrictedstock'];
              const stockMap = {};
              for(let i=1; i<rawStock.length; i++) {
                  const row = rawStock[i]; const mat = String(row[idxSMat]||'').trim();
                  if(!mat) continue; if(!stockMap[mat]) stockMap[mat] = { qty: 0, val: 0 };
                  stockMap[mat].qty += (parseFloat(row[idxSQty])||0); stockMap[mat].val += (parseFloat(row[idxSVal])||0);
              }
              const rawPR = readExcelFromBuffer(prBuffer); const hPR = mapHeaders(rawPR[0]);
              const idxPMat = hPR['material']??hPR['materialnumber']; const idxPNo = hPR['purchaserequisition']??hPR['prnumber']; const idxPQty = hPR['quantity']??hPR['qty']; const idxPlant = hPR['plant']??hPR['site'];
              let details = []; const dynamicStock = JSON.parse(JSON.stringify(stockMap));
              for(let i=1; i<rawPR.length; i++) {
                  const row = rawPR[i]; const mat = String(row[idxPMat]||'').trim(); const qty = parseFloat(row[idxPQty])||0; const plant = row[idxPlant] ? String(row[idxPlant]) : 'Unknown';
                  let soh = dynamicStock[mat]?.qty || 0; let unitPrice = dynamicStock[mat]?.qty ? (dynamicStock[mat].val / dynamicStock[mat].qty) : 0;
                  let status = "Out of Stock"; let rec = "Proceed with PO"; let alloc = 0; let color = "text-red-600";
                  if(soh >= qty) { status = "Full Allocation"; rec = "Create STO"; color = "text-green-600"; alloc = qty; if(dynamicStock[mat]) dynamicStock[mat].qty -= qty; }
                  else if (soh > 0) { status = "Partial Allocation"; rec = "Create STO (Partial)"; color = "text-yellow-600"; alloc = soh; if(dynamicStock[mat]) dynamicStock[mat].qty = 0; }
                  details.push({ _prNumber: row[idxPNo]||'-', _matCode: mat, _qtyReq: qty, _plantCode: plant, _status: status, _recommendation: rec, _allocation: alloc, _stoValue: alloc * unitPrice, _color: color });
              }
              const summaryMap = {};
              details.forEach(d => {
                  const loc = PLANT_MAP[d._plantCode] || d._plantCode;
                  if(!summaryMap[loc]) summaryMap[loc] = { location: loc, fullStoCount: 0, partialStoCount: 0, poCount: 0, totalValue: 0 };
                  if(d._recommendation.includes("STO")) { summaryMap[loc].totalValue += d._stoValue; if(d._status.includes("Full")) summaryMap[loc].fullStoCount++; else summaryMap[loc].partialStoCount++; }
                  else { summaryMap[loc].poCount++; }
              });
              self.postMessage({ type: 'result', data: { details, summary: Object.values(summaryMap) } });
          }
        `;
        function createWorker() { const blob = new Blob([workerScript], { type: 'application/javascript' }); return new Worker(URL.createObjectURL(blob)); }

